        predicates:
        - Path=/hotels/**
        
      - id: ORDER-SERVICE
        uri: lb://ORDER-SERVICE
        predicates:
        - Path=/orders/**
        
eureka:
  instance:
    ip-address: true
  client:
    fetch-registry: true
